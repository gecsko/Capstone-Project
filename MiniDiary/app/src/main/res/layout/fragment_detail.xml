<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kathy.minidiary.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:contentDescription="Diary Title"
                    android:text="Go Shopping with Sandy"
                    android:textSize="20sp"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/detail_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:contentDescription="The moment Date and Time"
                    android:text="13:15 02052016"/>

                <TextView
                    android:id="@+id/detail_location"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:contentDescription="The moment location"
                    android:text="At Causeway Bay"/>
            </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/detail_weather"
                android:layout_margin="16dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="Diary Content"
            android:layout_margin="8dp"/>

        <!--com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:contentDescription="ad">
        </com.google.android.gms.ads.AdView-->

    </LinearLayout>
</FrameLayout>
